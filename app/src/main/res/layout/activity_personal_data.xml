<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jhj0104.brainbeauty.PersonalData">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="뇌미인"
                android:textSize="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView00" />
            <TextView
                android:text="다이어리"
                android:textSize="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/textView01" />


        </LinearLayout>



        <TextView
            android:text="기본정보 입력"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/textView0"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:text="1. 성함"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/textView1" />

            <EditText
                android:id="@+id/editText1"
                android:hint="(성함)"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="4"
                android:selectAllOnFocus="true"
                android:cursorVisible="true"
                android:layout_marginStart="30dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView1"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="2. 성별"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/textView2" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup"
                android:layout_marginTop="60dp">

                <RadioButton
                    android:text="여성"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView2"
                    android:layout_marginStart="90dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/radioButton1"/>

                <RadioButton
                    android:text="남성"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/radioButton1"
                    android:layout_marginStart="90dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/radioButton2"/>
            </RadioGroup>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:text="3. 나이"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:id="@+id/textView3"/>

            <TextView
                android:textSize="20dp"
                android:text="세"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:layout_alignBottom="@+id/textView3"
                android:layout_toEndOf="@+id/editText3"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText3"
                android:hint="(나이)"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="3"
                android:selectAllOnFocus="true"
                android:cursorVisible="true"
                android:layout_marginStart="31dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView3" />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="4. 키"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_marginTop="60dp"/>

            <EditText
                android:id="@+id/editText4"
                android:hint="(키)"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="4"
                android:layout_marginStart="40dp"
                android:selectAllOnFocus="true"
                android:cursorVisible="true"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView4" />

            <TextView
                android:textSize="20dp"
                android:text="cm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView4"
                android:layout_toEndOf="@+id/editText4"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="5. 몸무게"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_marginTop="60dp"/>

            <EditText
                android:id="@+id/editText5"
                android:hint="(몸무게)"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="4"
                android:selectAllOnFocus="true"
                android:cursorVisible="true"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/textView5"
                android:layout_marginStart="20dp" />


            <TextView
                android:textSize="20dp"
                android:text="kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/editText5"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>


        <Button
            android:text="확인"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:id="@+id/button3"
            android:layout_marginTop="60dp"
            android:onClick ="btn_savePersonalData"/>



    </LinearLayout>
</ScrollView>
