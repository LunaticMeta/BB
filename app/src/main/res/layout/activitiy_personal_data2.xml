<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_personal_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jhj0104.brainbeauty.PersonalData">


    <TextView
        android:text="뇌미인 다이어리"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView00" />

    <TextView
        android:text="기본정보 입력"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/textView0"/>

    <TextView
        android:text="1. 이름"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:id="@+id/textView1" />

    <TextView
        android:text="2. 성별"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:text="3. 나이"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="4. 키"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="5. 몸무게"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editText4"/>

    <EditText
        android:id="@+id/editText3"
        android:hint="나이"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="true"
        android:cursorVisible="true" />

    <EditText
        android:id="@+id/editText4"
        android:hint="키"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="true"
        android:selectAllOnFocus="true"
        android:cursorVisible="true" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:text="male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView00"
        android:layout_marginStart="26dp" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:text="female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignBaseline="@+id/checkBox1"
        android:layout_alignBottom="@+id/checkBox1"
        android:layout_toEndOf="@+id/checkBox1"
        android:layout_marginStart="30dp" />

    <EditText
        android:id="@+id/editText1"
        android:hint="성함"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="4"
        android:selectAllOnFocus="true"
        android:cursorVisible="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignStart="@+id/editText3" />


    <EditText
        android:id="@+id/editText5"
        android:hint="몸무게"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="4"
        android:selectAllOnFocus="true"
        android:cursorVisible="true"
        android:layout_marginEnd="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/editText4" />


</RelativeLayout>
