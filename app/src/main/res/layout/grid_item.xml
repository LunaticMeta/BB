<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/d_diary_swipe"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_width="150dp"
    android:layout_height="160dp">
    <!-- Bottom View Start-->
    <LinearLayout
        android:gravity="center"
        android:tag="Bottom2"
        android:background="#424242"
        android:id="@+id/bottom_wrapper2"
        android:layout_width="80dp"
        android:weightSum="1"
        android:layout_height="160dp"
        android:orientation="vertical">
        <!--What you want to show-->

        <ImageView
            android:id="@+id/eraser"
            android:src="@drawable/eraser"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:onClick="onClick_eraser"/>

        <ImageView
            android:id="@+id/garbage"
            android:src="@drawable/garbage_wh"
            android:layout_marginTop="30dp"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:onClick="onClick_garbage"/>

    </LinearLayout>
    <!-- Bottom View End-->

    <!-- Surface View Start -->
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="300dp"
        android:background="#ffffff"
        android:layout_height="150dp"
        android:orientation="horizontal">
        <TextView
            android:textColor="#000000"
            android:textSize="30dp"
            android:text="1"
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="2"
            android:id="@+id/position2"
            android:layout_toEndOf="@+id/position"
            android:layout_alignBottom="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#000000"
            android:textSize="10dp"
            android:text="2016.**.**."
            android:id="@+id/position_id"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/diaryTitle"
            android:textStyle="bold"
            android:textSize="19dp"
            android:tag="Hover"
            android:maxLines="10"
            android:ellipsize="none"
            android:layout_marginTop="50dp"
            android:text="Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">
            </TextView>
        <TextView
            android:id="@+id/diaryContent"
            android:textSize="14dp"
            android:tag="Hover"
            android:maxLines="10"
            android:ellipsize="none"
            android:layout_marginTop="72dp"
            android:text="Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">
        </TextView>


        <!--What you want to show in SurfaceView-->
    </RelativeLayout>

    <!-- Surface View End -->
</com.daimajia.swipe.SwipeLayout>
