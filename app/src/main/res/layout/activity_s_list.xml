<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_s_work_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center">

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#d4e4e1"
            app:srcCompat="@drawable/keyboard_back"
            android:id="@+id/imageButton3"
            android:onClick="onClick_back"/>

        <TextView
            android:text="2016.07.13"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:gravity="center_vertical"
            android:id="@+id/textDate" />

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#d4e4e1"
            app:srcCompat="@drawable/keyboard_next"
            android:id="@+id/imageButton4"
            android:onClick="onClick_next" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:src="@drawable/work1"/>
    </LinearLayout>

    <ListView
        android:id="@+id/s_list1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize = "20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.12" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#dddddd">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:src="@drawable/work2"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ListView
        android:id="@+id/s_list2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:textSize = "20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="0.5"/>


</LinearLayout>
